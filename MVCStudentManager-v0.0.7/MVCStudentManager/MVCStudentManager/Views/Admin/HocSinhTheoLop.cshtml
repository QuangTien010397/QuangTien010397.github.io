@model IEnumerable<MVCStudentManager.Models.HocSinh>

@{
    ViewBag.Title = "HocSinhTheoLop";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br>
<h1 style="text-align:center; font-weight:bold">Học sinh lớp</h1>

<div style= "padding:20px">
    @Html.ActionLink("Thêm mới", "ThemHS")
</div>

<table class="table">
    <tr>
        <th style="width:200px">Họ tên</th>
        <th style="width:200px">Ngày sinh</th>
        <th style="width:100px">Giới tính</th>
        <th style="width:200px">Email</th>
        <th style="width:200px">Địa chỉ</th>
        <th style="width:100px">Tên lớp</th>
        <th style="width:200px"> </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop.TenLop)
            </td>
            <td>
                @Html.ActionLink("Xem điểm", "DiemTheoHS", new { id = item.MaHS }) |
                @Html.ActionLink("Sửa", "SuaHS", new { id = item.MaHS }) |
                @Html.ActionLink("Xóa", "XoaHS", new { id = item.MaHS })
            </td>
        </tr>
    }
</table>

