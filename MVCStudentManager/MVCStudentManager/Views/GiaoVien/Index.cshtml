@model IEnumerable<MVCStudentManager.Models.GiaoVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<button style="float:right">@Html.ActionLink("Đăng nhập", "LoginGV", "User")</button>
<br>
<h2 style="text-align:center">XIN CHÀO GIÁO VIÊN</h2>

@using (Html.BeginForm("Index", "HocSinh", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
{
    <p style="text-align:center">
        Tìm : @Html.TextBox("SearchString")
        <input type="submit" value="Tìm kiếm" />
    </p>
}
<table class="table">
    <tr>
        <th style="width:200px">Tên giáo viên</th>
        <th style="width:200px">Địa chỉ</th>
        <th style="width:200px">Điện thoại</th>
        <th style="width:200px">Môn học</th>
        <th style="width:200px"> </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenGiaoVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonHoc.TenMon)
            </td>
        </tr>
    }
</table>
