@model MVCStudentManager.Models.HocSinh

@{
    ViewBag.Title = "ThemHS";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br>
<h2 style="text-align:center; font-weight:bold">Thêm học sinh</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*Họ tên*@
    <div class="form-group">
        @Html.LabelFor(model => model.HoTen,"Họ tên", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Ngày sinh*@
    <div class="form-group">
        @Html.LabelFor(model => model.NgaySinh,"Ngày sinh", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })*@
            <input type="date" name="NgaySinh">
            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Giới tính*@
    <div class="form-group">
        @Html.LabelFor(model => model.GioiTinh,"Giới tính", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Email*@
    <div class="form-group">
        @Html.LabelFor(model => model.Email,"Email", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Địa chỉ*@
    <div class="form-group">
        @Html.LabelFor(model => model.DiaChi,"Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>
    @*IDLogin*@
    <div class="form-group">
        @Html.LabelFor(model => model.IDLogin,"Tài khoản", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IDLogin, new { htmlAttributes = new { @class = "from-control" } })
            @Html.ValidationMessageFor(model => model.IDLogin, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Pass*@
    <div class="form-group">
        @Html.LabelFor(model => model.Pass,"Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Pass, new { htmlAttributes = new { @class = "from-control" } })
            @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Lớp*@
    <div class="form-group">
        @Html.LabelFor(model => model.MaLop,"Tên lớp", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaLop")
        </div>
    </div>
    @*Button*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-default" />
            @*<button>
                @Html.ActionLink("Trở về", "Index")
            </button>*@
        </div>
    </div>
</div>
}


