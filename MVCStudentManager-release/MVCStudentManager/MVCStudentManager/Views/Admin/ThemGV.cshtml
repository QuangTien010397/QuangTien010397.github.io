@model MVCStudentManager.Models.GiaoVien

@{
    ViewBag.Title = "ThemGV";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br>
<h2 style="text-align:center; font-weight:bold">Thêm giáo viên</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*Tên giáo viên*@
    <div class="form-group">
        @Html.LabelFor(model => model.TenGiaoVien,"Tên giáo viên", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenGiaoVien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenGiaoVien, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Địa chỉ*@
    <div class="form-group">
        @Html.LabelFor(model => model.DiaChi,"Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Điện thoại*@
    <div class="form-group">
        @Html.LabelFor(model => model.DienThoai,"Điện thoại", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Mã môn*@
    <div class="form-group">
        @Html.LabelFor(model => model.MonHoc.TenMon,"Tên môn", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaMon")
        </div>
    </div>
    @*IDLogin*@
    <div class="form-group">
        @Html.LabelFor(model => model.IDLogin,"Tài khoản", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IDLogin, new { htmlAttributes = new { @class = "from-control" } })
            @Html.ValidationMessageFor(model => model.IDLogin, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Pass*@
    <div class="form-group">
        @Html.LabelFor(model => model.Pass,"Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Pass, new { htmlAttributes = new { @class = "from-control" } })
            @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Button*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-default" /> |
            <button>
                @Html.ActionLink("Trở về", "Teacher")
            </button>
        </div>
    </div>
</div>
}

